<%- include ('partials/header') %>

    <body>
        <%- include ('partials/navbar') %>


        <div class="container">

            <hr>

            <h1>
                <%= pergunta.titulo %> 
            </h1>

            <p>
                <%= pergunta.descricao %> 

            </p>

            <hr>


            <form method="POST" action="/responder">
                <h3>Responda</h3>
                <textarea  placeholder="Digite sua resposta" class="form-control" name="corpo" id="" cols="30" rows="5"></textarea>

                <input type="hidden"  name="pergunta" value="<%= pergunta.id %> ">

                <button type="submit"  class="btn btn-primary mt-4" >Responder</button>


            </form>

            <hr>

            <h3>Respondas</h3>
            <hr>

            <% respostas.forEach( resposta => { %>

              <div class="card mb-4">
                  <div class="card-body">
                      <p>
                        <%= resposta.corpo %> 
                      </p>
                  </div>
              </div>
             
            <% }) %>

         
        </div>





    </body>

    <%- include ('partials/footer') %>